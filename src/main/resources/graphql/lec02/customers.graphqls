
type Query {
	# get all customers
	customers: [Customer]!
	
	# get specific customer by id
	customerById(id: ID!): Customer
	
	# get customers matches name
	customerNameContains(name: String!): [Customer]
	
	#filter customer by age range
	customerByAgeRange(filter: AgeRangeFilter!): [Customer]!
}

input AgeRangeFilter {
	minAge: Int!
	maxAge: Int!
}

type Customer {
	id: ID
	name: String
	age: Int
	city: String
}